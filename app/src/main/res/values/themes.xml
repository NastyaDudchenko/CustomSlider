<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomSlider" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Slider -->
        <item name="sliderStyle">@style/Widget.App.Slider</item>
    </style>

    <style name="ThemeOverlay.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="shapeAppearanceOverlay">@style/ThemeOverlay.App.Tooltip.Shape</item>
        <item name="backgroundTint">@color/tooltip_background_tint</item>
    </style>

    <style name="ThemeOverlay.App.Tooltip.Shape" parent="Widget.MaterialComponents.Tooltip">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="colorPrimary">@color/slider_background</item>
    </style>

</resources>