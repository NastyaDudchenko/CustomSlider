<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simple.custom.slider.MainActivity">

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/margin_52"
        android:stepSize="1"
        android:valueFrom="2"
        android:valueTo="60"
        app:haloRadius="@dimen/radius_20"
        app:labelBehavior="withinBounds"
        app:labelStyle="@style/ThemeOverlay.App.Tooltip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbColor="@color/thumb_background"
        app:thumbElevation="@null"
        app:thumbRadius="@dimen/radius_5"
        app:thumbStrokeColor="@color/thumb_stroke"
        app:thumbStrokeWidth="@dimen/width_1"
        app:trackColorActive="@color/track"
        app:trackColorInactive="@color/track"
        app:trackHeight="@dimen/height_1" />
</androidx.constraintlayout.widget.ConstraintLayout>